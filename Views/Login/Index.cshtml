
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Online Ticari Otomasyon</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Project Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template" />
	<link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
	<link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
	<link href="~/weblogin/css/style.css" type="text/css" rel="stylesheet" media="all">
	<link rel="stylesheet" href="~/weblogin/css/font-awesome.css">
	<link href="~/weblogin/css/popup-box.css" rel="stylesheet" type="text/css" media="all" />
</head>
<body>
	<section class="register">
		<div class="header">
			<div class="logo">
				<a href="#">Ticari Otomasyon</a>
			</div>
			<div class="social">
				<li><a href="#"><span class="fa fa-facebook"></span></a></li>
				<li><a href="#"><span class="fa fa-twitter"></span></a></li>
				<li><a href="#"><span class="fa fa-linkedin"></span></a></li>
				<li><a href="#"><span class="fa fa-google-plus"></span></a></li>
			</div>
			<div class="clear"></div>
		</div>

		<div class="register-full">
			<div class="register-left">
				<div class="register">
					<h1>ASP.NET Core 6</h1>
					<h2>Dinamik Web Application</h2>
					<p>
						Admin, Personel kişisel sayfası ve cari kişisel sayfası olmak üzere 3 tane temel yapımız bulunmaktadır.
						Giriş yapmak istediğiniz yetki durumunuza göre sağ taraftan ilgili menüyü seçin.
					</p>
					<div class="content3">
						<ul>
							<li><a class="read" href="#">Ürünlerimiz</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="register-right">
				<div class="register-in">
					<a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">Cari Kayıt »</a>
				</div>
				<div class="register-in middle">
					<a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Cari Giriş »</a>
				</div>
				<div class="register-in">
					<a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Personel Giriş »</a>
				</div>
				<div class="clear"> </div>
			</div>
			<div class="clear"> </div>
		</div>
		<p class="agile-copyright">© 2023 Project. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
	</section>
	<div class="pop-up">
		<div id="small-dialog" class="mfp-hide book-form">
			@await Component.InvokeAsync("_LoginCariGirisComponentPartial")
		</div>
	</div>
	<div class="pop-up">
		<div id="small-dialog1" class="mfp-hide book-form">
			@await Component.InvokeAsync("_LoginPersonelGirisComponentPartial")
		</div>
	</div>
	<div class="pop-up">
		<div id="small-dialog2" class="mfp-hide book-form">
			@await Component.InvokeAsync("_LoginCariKayitComponentPartial")
		</div>
	</div>
	<script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
	<script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
	<script>
		$(document).ready(function() {
		$('.popup-with-zoom-anim').magnificPopup({
			type: 'inline',
			fixedContentPos: false,
			fixedBgPos: true,
			overflowY: 'auto',
			closeBtnInside: true,
			preloader: false,
			midClick: true,
			removalDelay: 300,
			mainClass: 'my-mfp-zoom-in'
		});

		});
	</script>

</body>
</html>