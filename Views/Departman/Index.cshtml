@model List<Departman>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper mt-3">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Departmanlar</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Departman Ad</th>
                                <th>Detay</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DepartmanID</td>
                                    <td>@item.DepartmanAd</td>
                                    <td><a href="/Departman/DepartmanDetay/@item.DepartmanID" class="btn btn-outline-success">Detay</a></td>
                                    <td><a href="/Departman/DepartmanDuzenle/@item.DepartmanID" class="btn btn-outline-info">Düzenle</a></td>
                                    <td><a href="/Departman/DepartmanSil/@item.DepartmanID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="/Departman/DepartmanEkle" class="btn btn-primary">Yeni Ekle</a>
        </div>
    </section>
</div>
