@model List<Kategori>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper mt-3">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kategoriler</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Kategori Ad</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.KategoriID</td>
                                    <td>@item.KategoriAd</td>
                                    <td><a href="/Kategori/KategoriDuzenle/@item.KategoriID" class="btn btn-outline-info">Düzenle</a></td>
                                    <td><a href="/Kategori/KategoriSil/@item.KategoriID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>                                
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="/Kategori/KategoriEkle" class="btn btn-primary">Yeni Ekle</a>
        </div>
    </section>
</div>
