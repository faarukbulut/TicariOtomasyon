@model List<SatisHareket>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper mt-3">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Satışlar</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                        <th>Ürün</th>
                        <th>Cari</th>
                        <th>Personel</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                        <th>Toplam</th>
                        <th>Tarih</th>
                        <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SatisHareketID</td>
                                    <td>@item.Urun.UrunAd</td>
                                    <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                                    <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                                    <td>@item.Adet</td>
                                    <td>@item.Fiyat ₺</td>
                                    <td>@item.ToplamTutar ₺</td>
                                    <td>@item.Tarih</td>
                                    <td><a href="/Satis/SatisDuzenle/@item.SatisHareketID" class="btn btn-outline-danger">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="/Satis/SatisEkle" class="btn btn-primary">Yeni Ekle</a>
            <a href="/Satis/SatisYazdir" target="_blank" class="btn btn-primary">Yazdır</a>
        </div>
    </section>
</div>
