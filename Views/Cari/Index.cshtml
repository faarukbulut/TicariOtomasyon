@model List<Cari>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper mt-3">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Cariler</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Şehir</th>
                        <th>Mail</th>
                        <th>Satış Geçmişi</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CariID</td>
                                    <td>@item.CariAd</td>
                                    <td>@item.CariSoyad</td>
                                    <td>@item.CariSehir</td>
                                    <td>@item.CariMail</td>
                                    <td><a href="/Cari/SatisGecmisi/@item.CariID" class="btn btn-outline-success">Satış Geçmişi</a></td>
                                    <td><a href="/Cari/CariDuzenle/@item.CariID" class="btn btn-outline-info">Düzenle</a></td>
                                    <td><a href="/Cari/CariSil/@item.CariID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="/Cari/CariEkle" class="btn btn-primary">Yeni Ekle</a>
        </div>
    </section>
</div>
