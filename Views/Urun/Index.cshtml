@model List<Urun>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper mt-3">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Ürünler</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ürün</th>
                                <th>Marka</th>
                                <th>Stok</th>
                                <th>Alış Fiyat</th>
                                <th>Satış Fiyat</th>
                                <th>Kategori</th>
                                <th>Görsel</th>
                                <th>Detay</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UrunID</td>
                                    <td>@item.UrunAd</td>
                                    <td>@item.Marka</td>
                                    <td>@item.Stok</td>
                                    <td>@item.AlisFiyat ₺</td>
                                    <td>@item.SatisFiyat ₺</td>
                                    <td>@item.Kategori.KategoriAd</td>
                                    <td><img src="~/Upload/images/urunler/@item.UrunGorsel" width="100" height="100" /></td>
                                    <td><a href="/Urun/UrunDetay/@item.UrunID" class="btn btn-outline-success">Detay</a></td>
                                    <td><a href="/Urun/UrunDuzenle/@item.UrunID" class="btn btn-outline-info">Düzenle</a></td>
                                    <td><a href="/Urun/UrunSil/@item.UrunID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="/Urun/UrunEkle" class="btn btn-primary">Yeni Ekle</a>
        </div>
    </section>
</div>
