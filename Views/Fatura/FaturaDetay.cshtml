@model List<FaturaKalem>
@{
    ViewData["Title"] = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper mt-3">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Fatura Kalemleri</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                        <th>ID</th>
                        <th>Açıklama</th>
                        <th>Miktar</th>
                        <th>Birim Fiyat</th>
                        <th>Tutar</th>
                    </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FaturaKalemID</td>
                                    <td>@item.Aciklama</td>
                                    <td>@item.Miktar</td>
                                    <td>@item.BirimFiyat ₺</td>
                                    <td>@item.Tutar ₺</td>
                                </tr>
                            }
                    </tbody>
                    </table>
                </div>
            </div>
            <a href="/Fatura/FaturaKalemEkle/@ViewBag.FaturaID" class="btn btn-primary">Yeni Ekle</a>
        </div>
    </section>
</div>
